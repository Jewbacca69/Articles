{% include ('includes/header.twig') %}

{% include ('includes/navbar.twig') %}

<div class="max-w-7xl mx-auto py-8 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for article in articles.getAllArticles() %}
            <a href="/article/{{ article.id }}" class="text-blue-400 no-underline">
                <div class="bg-gray-800 rounded-lg overflow-hidden shadow-md dark:bg-gray-800 dark:text-gray-200 article-block">
                    <img src="{{ article.picture }}" alt="Article Image {{ article.id }}"
                         class="w-full h-40 object-cover object-center">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold mb-2">
                            {{ article.title }}
                        </h3>
                        <small class="text-gray-500 block">{{ article.createdAt() }}</small>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</div>

